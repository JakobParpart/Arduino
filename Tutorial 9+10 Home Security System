This program makes use of a motion sensor, piezo and a SPDT switch.
The switch will either arm or disarm the system.
If motion is detected by the motion sensor, the piezo will sound and a red LED will flash.
To disarm the system simply slide the switch to the off position.


*/
//All constant pins remain the same throughout the program
const int trigPin = 2; //sets trig pin from Ultrasonic Sensor
const int echoPin = 3; //sets echo pin from Ultrasonic Sensor
const int LEDlampRed = 4; //sets Red LED
const int LEDlampYellow = 5; //sets Yellow LED
const int LEDlampGreen = 6; //sets Greem LED
const int soundbuzzer = 7; //sets piezo buzzer

int sound = 500; //piezo buzzer frequency

void setup() { //start of setup
  Serial.begin (9600); //initialize serial monitor
  
  pinMode(trigPin, OUTPUT); //sets trig pin as output
  pinMode(echoPin, INPUT); //sets echo pin as input
  pinMode(LEDlampRed, OUTPUT); //sets Red LED as output
  pinMode(LEDlampYellow, OUTPUT); //sets Yellow LED as output
  pinMode(LEDlampGreen, OUTPUT); //sets Green LED as output
  pinMode(soundbuzzer, OUTPUT); // sets piezo as output
} //end of setup
void loop() { //start of loop
  long durationDigit; //digit initialization
  
  digitalWrite(trigPin, LOW); //sets trig pin to low
  delayMicroseconds(2); //delay for the ultrasonic sensor
  digitalWrite(trigPin, HIGH); //sets trig pin to high
  delayMicroseconds(10); //delay for the ultrasonic sensor
  digitalWrite(trigPin, LOW); //sets trig pin to low
  
  durationDigit = pulseIn(echoPin, HIGH); //sets echo pin to high
  Serial.println(durationDigit); //sets duration of the piezo

  
  delay(300); //300ms delay
} //end of loop
