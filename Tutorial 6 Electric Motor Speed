




int analogInPin = A0; //Declares analog pin to potentiometer
int sensorValue = 0;// setes sensor value
int outputValue = 0; //declares output value
int transistorPin = 3; //declares what pin the transistor goes to



void setup()//start of setup
{

Serial.begin(9600); //starts serial monitor
pinMode(8, OUTPUT); //sets pin 8 to output
pinMode(9, OUTPUT); //sets pin 9 to output
pinMode(transistorPin, OUTPUT); //sets the transistor pin to output
}//end of setup


void loop() //start of loop
{

sensorValue = analogRead(analogInPin)/4; //reads the sensors value
outputValue = map(sensorValue, 0, 1023, 0, 255); //remaps potentiometer from 0-1023 to 0-255
analogWrite(transistorPin, sensorValue); //reads transistor pins value
if (sensorValue >= 160) //if sensor value is greater than 160 turn on led
{

digitalWrite(8, HIGH); //sets pin 8 to high
digitalWrite(9, LOW); //sets pin 9 to low
}

else //start of else statement
{ digitalWrite(9, HIGH); //sets pin 9 to high
digitalWrite(8, LOW); //sets pin 8 to low
} //end of else
delay(10); } //delay the program
